<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
  </head>


  <body>

    <header>
      <%- include('./partials/header'); %>
  </header>
    
    <div class="middle">

        <h1>Shopping Cart</h1>
    
        <div id="ProductBox_Big">


            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="panel panel-info">
                            
                            <% if (typeof cart !== 'undefined') { %>
                
                            <% for(var i=0; i<cart.length; i++) {%>

                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-2"><img class="img-responsive" src="http://placehold.it/100x70">
                                    </div>
                                    <div class="col-xs-4">
                                        <h3 class="product-name"><strong><%= cart[i].name %></strong></h3>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="col-xs-6 text-right">
                                            <h4><strong>Price: <%= cart[i].price %> €</strong></h4>
                                        </div>
                                        <div class="col-xs-4">
                                            
                                        </div>
                                        <div class="col-xs-2">
                                            <form action="/cart/delete/<%= cart[i].id %>" method="GET">
                                                <button type="submit" class="btn btn-link btn-l">
                                                    <span class="glyphicon glyphicon-trash"> </span>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            </div>

                            <% } %>

                            <% } %>

                            <div class="panel-footer">
                                <div class="row text-center">
                                    <div class="col-xs-9">
                                        <% if (typeof sum !== 'undefined') { %>

                                            <h4 class="text-right">Total <strong><%= sum %> €</strong></h4>
                            
                                        <% } else { %>
                                        <h4 class="text-right">Total <strong>0 €</strong></h4>
                                        <% } %>
                                    </div>
                                    <div class="col-xs-3">
                                        <button type="button" class="btn btn-success btn-block">
                                            Checkout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>







        </div>
    </div>

    <footer>
      <%- include('./partials/footer'); %>
  </footer>
  </body>
</html>